<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Actors Main Layout</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/sammy-0.7.5.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.fancybox.min.css" />
</head>
<body>
    <div class="navbar-expand-sm bg-light">
        <div class="container">
            <ul class="navbar-nav">
                <li>
                    <a href="javascript::;" onclick="GetAll()" class="nav-item">All</a>
                </li>
                <li>
                    <a href="javascript::;" onclick="GetAllActors()" class="nav-item">Actors</a>
                </li>
                <li>
                    <a href="javascript::;" onclick="GetAllActresses()">Actresses</a>
                </li>
            </ul>
        </div>
    </div>
    <div id="MainContent" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Actors</p>
        </footer>
    </div>
    <script src="~/layout-routing.js"></script>
    <script src="~/Scripts/jquery.fancybox.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>